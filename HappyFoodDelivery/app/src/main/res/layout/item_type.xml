<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="@dimen/margin_medium_3">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvType"
        android:layout_width="@dimen/width_cardview_small"
        android:layout_height="@dimen/width_cardview_small"
        android:backgroundTint="@color/colorTransparentPink"
        app:cardCornerRadius="@dimen/margin_medium_2">

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/giftbox"
            android:layout_margin="@dimen/margin_medium_2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTypeName"
        android:layout_width="@dimen/width_cardview_small"
        android:layout_height="wrap_content"
        android:text="Offers"
        android:textAlignment="center"
        android:textColor="@color/textcolorPrimary"
        android:textSize="@dimen/text_regular"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@id/cvType"/>


</RelativeLayout>