<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/margin_medium"
    android:paddingEnd="@dimen/margin_medium_3">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPopularChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_medium_2">

        <ImageView
            android:id="@+id/ivPopularChoice"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:src="@drawable/restaurant"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast Burgers"
        android:textAlignment="textStart"
        android:textColor="@color/textcolorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular_3x"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@id/cvPopularChoice"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafe * Western Food * $$ "
        android:textSize="@dimen/text_regular"
        android:textColor="@color/textcolorTertary"
        android:paddingTop="@dimen/margin_small"
        android:layout_below="@id/tvFoodName"/>


    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.9"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/colorPrimaryDark1"
        android:paddingTop="@dimen/margin_small"
        android:drawableLeft="@drawable/ic_star_pink_24"
        android:drawablePadding="@dimen/margin_small"
        android:layout_alignTop="@id/tvDescription"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_toEndOf="@id/tvDescription"/>

</RelativeLayout>